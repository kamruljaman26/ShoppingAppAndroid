<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        app:cardElevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/item_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/item1_image_id"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/macbook_pro" />

            <TextView
                android:id="@+id/item1_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Macbook Pro 2015"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item1_price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $2000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:cardElevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/item_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/item2_image_id"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/macbook_pro" />

            <TextView
                android:id="@+id/item2_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Macbook Pro 2015"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item2_price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $2000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/app_description"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1" />
</androidx.constraintlayout.widget.ConstraintLayout>